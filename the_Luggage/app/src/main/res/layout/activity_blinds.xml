<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/a2"
    tools:context=".BlindsActivity" >
    
	<Switch
        android:id="@+id/sBlindsAll"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="#FF0"
        android:text="All" />

    <Switch
        android:id="@+id/sBlindsRoom"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sBlindsAll"
        android:layout_below="@+id/sBlindsAll"
        android:layout_marginTop="250dp"
        android:background="#FF0"
        android:text="Room" />

    <Switch
        android:id="@+id/sBlindsLivingRoom"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sBlindsRoom"
        android:layout_below="@+id/sBlindsRoom"
        android:layout_marginTop="25dp"
        android:background="#FF0"
        android:text="Livingroom" />

    <Switch
        android:id="@+id/sBlindsKitchen"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sBlindsLivingRoom"
        android:layout_below="@+id/sBlindsLivingRoom"
        android:layout_marginTop="25dp"
        android:background="#FF0"
        android:text="Kitchen" />

</RelativeLayout>
