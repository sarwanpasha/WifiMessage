<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/light"
    tools:context="com.example.root.Upload_User_Detail.Upload_Detail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please Fill out the form so that any needy person can reach you"
        android:id="@+id/textView9"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />





    <Button
        android:id="@+id/btn_Submit"
        android:text="Submit"
        android:layout_below="@+id/btn_Upload"
        android:layout_marginTop="10dp"

        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="218dp"
        android:layout_height="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/et_Name"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <!--<EditText-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:inputType="textPersonName"-->
    <!--android:text=""-->
    <!--android:ems="10"-->
    <!--android:id="@+id/et_Blood_Group"-->
    <!--android:layout_below="@+id/et_Name"-->
    <!--android:layout_alignLeft="@+id/et_Name"-->
    <!--android:layout_alignStart="@+id/et_Name" />-->

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_Blood_Group"
        android:layout_below="@+id/et_Name"
        android:layout_alignLeft="@+id/et_Name"
        android:layout_alignStart="@+id/et_Name"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/et_Phone_Number"
        android:layout_below="@+id/et_Blood_Group"
        android:layout_alignLeft="@+id/et_Blood_Group"
        android:layout_alignStart="@+id/et_Blood_Group" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/et_City"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignLeft="@+id/et_Phone_Number"
        android:layout_alignStart="@+id/et_Phone_Number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/et_Address"
        android:layout_below="@+id/et_City"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/et_City"
        android:layout_alignStart="@+id/et_City" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Upload Image"
        android:id="@+id/textView13"
        android:layout_below="@+id/et_Address"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btn_Upload"
        android:text="Upload"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="110dp"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvGet_Upload_Status"
        android:layout_above="@+id/btn_Submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/textView10"
        android:layout_alignRight="@+id/btn_Upload"
        android:layout_alignEnd="@+id/btn_Upload"
        android:layout_alignBottom="@+id/et_Name"
        android:layout_toRightOf="@+id/tvGet_Upload_Status"
        android:layout_toEndOf="@+id/tvGet_Upload_Status"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Blood Group"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone Number"
        android:id="@+id/textView12"
        android:layout_below="@+id/et_Blood_Group"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="City"
        android:id="@+id/textView14"
        android:layout_below="@+id/et_Phone_Number"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address"
        android:id="@+id/textView15"
        android:layout_below="@+id/et_City"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        />



</RelativeLayout>
